<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h1><%= @list.name %></h1>
    <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-success" %>
  </div>

  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-12 col-sm-6 col-md-4 mb-3">
        <div class="card shadow-sm h-100">
          <img src="<%= bookmark.movie.poster_url %>" class="card-img-top" alt="<%= bookmark.movie.title %>">
          <div class="card-body">
            <h5 class="card-title">
              <%= bookmark.movie.title %>
              <span class="text-muted small">| <%= bookmark.movie.rating %> â˜…</span>
            </h5>
            <p class="card-text text-secondary"><%= bookmark.movie.overview %></p>

            <div class="border-top pt-2">
              <i class="fa-solid fa-quote-left"></i>
              <small class="fst-italic"><%= bookmark.comment %></small>
            </div>
          </div>

          <div class="card-footer bg-white border-0 text-end">
            <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
            <%= link_to "Delete",
                bookmark_path(bookmark),
                data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to "Back to all lists", lists_path, class: "btn btn-light mt-3" %>
</div>
