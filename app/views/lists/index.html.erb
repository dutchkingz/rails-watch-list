
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-4">
    <h1 class="mb-0">My Movie Lists</h1>
    <%= link_to "New List", new_list_path, class: "btn btn-primary" %>
  </div>

  <div class="row g-4">
    <% if @lists.any? %>
      <% @lists.each do |list| %>
        <div class="col-12 col-sm-6 col-md-4">
          <%= link_to list_path(list), class: "text-decoration-none" do %>
            <div class="card shadow-sm border-0 h-100">
              <div class="card-body d-flex align-items-center justify-content-center bg-light rounded" style="height: 150px;">
                 <h3 class="card-title text-dark mb-0"><%= list.name %></h3>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <div class="col-12 text-center py-5">
        <p class="text-muted">You haven't created any lists yet.</p>
        <%= link_to "Create your first list!", new_list_path, class: "btn btn-outline-primary" %>
      </div>
    <% end %>
  </div>
</div>
